<web-app xmlns="http://caucho.com/ns/resin"
         xmlns:resin="urn:java:com.caucho.resin">

  <servlet-mapping url-pattern="*.php"
                   servlet-class="com.caucho.quercus.servlet.QuercusServlet">
     <init compile="false"/>
  </servlet-mapping>

  <session-config>
    <use-persistent-store/>
  </session-config>

  <!--
     - Security configuration
    -->
  <resin:LoginList>
    <resin:FormLogin login-page="/login.php"
                     error-page="/error.php"/>
    <resin:BasicLogin/>
  </resin:LoginList>

  <resin:Allow url-pattern="*.php">
    <resin:if test="${! resin_admin_external}">
      <resin:IfNetwork>
        <value>127.0.0.1</value>
        <value>192.168/16</value>
        <value>[::1]</value>
      </resin:IfNetwork>
    </resin:if>

    <resin:if test="${! resin_admin_insecure}">
      <resin:IfSecure/>
    </resin:if>
    <resin:IfUserInRole role="resin-admin"/>
  </resin:Allow>
</web-app>
