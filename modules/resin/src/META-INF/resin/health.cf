health:JmxCalculationMeter "Caucho|Proxy Cache|Miss Rate" {
  rate {
     delta objectName="caucho:type=ProxyCache" 
           attribute="MissCountTotal"
           optional="true";
     delta objectName="caucho:type=ProxyCache" 
           attribute="HitCountTotal"
           optional="true";
  }
}

health:JmxDeltaMeter "Caucho|Proxy Cache|Invocation Miss Count"
                     "caucho:type=ProxyCache"
                     InvocationMissCountTotal
                     optional=true;

health:JmxDeltaMeter "Caucho|Proxy Cache|Invocation Hit Count"
                     "caucho:type=ProxyCache"
                     InvocationHitCountTotal
                     optional=true;

health:JmxCalculationMeter "Caucho|Proxy Cache|Cacheable Rate" {
  ratio {
    add {
      delta objectName="caucho:type=ProxyCache"
            attribute="HitCountTotal"
            optional="true";
      delta objectName="caucho:type=ProxyCache"
            attribute="MissCountTotal"
             optional="true";
    }
    add {
      delta objectName="caucho:type=ProxyCache"
            attribute="InvocationHitCountTotal"
            optional="true";
      delta objectName="caucho:type=ProxyCache"
            attribute="InvocationMissCountTotal"
            optional="true";
   }
 }
