<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
             version="1.0">

  <portlet>
    <portlet-name>hello</portlet-name>
    <portlet-class>example.HelloWorldPortlet</portlet-class>
    <resource-bundle>example.HelloWorldPortlet</resource-bundle>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
      <portlet-mode>edit</portlet-mode>
      <portlet-mode>goodbye</portlet-mode>
    </supports>

  </portlet>

  <custom-portlet-mode>
    <portlet-mode>goodbye</portlet-mode>
  </custom-portlet-mode>

</portlet-app>


